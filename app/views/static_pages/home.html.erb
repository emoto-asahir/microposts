<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      followしたユーザーのmicropostがここに表示されます。<br>
      <%= paginate @feed_items %>
      <%= render 'shared/feed' %>
    </div>
   </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Microposts</h1>

    <%= link_to "Sign up to micropost,to follow users !!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  
    <div class="row">
    <div class="col-md-12">
      <h3>All Microposts</h3>
      <%= paginate @feed_items %>
      <%= render 'shared/feed' %>
    </div>
   </div>
   
<% end %>

